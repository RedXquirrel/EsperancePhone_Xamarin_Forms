<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="esperancephone.DataTemplates.CustomCells.PageCell">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="40" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="40" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="40" />
    </Grid.RowDefinitions>
    <BoxView Grid.Column="0" Grid.Row="0" Color="Transparent" Opacity="0.8" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
    <Label Text="{Binding IconKey}" FontSize="Large" TextColor="{StaticResource CaptainXamtasticBrandRedColor}" Grid.Column="0" Grid.Row="0" x:Name="IconLabel" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
    <StackLayout  Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Fill">
      <Label Text="{Binding Title}" FontAttributes="Bold" TextColor="{StaticResource CaptainXamtasticBrandRedColor}" VerticalOptions="Center" HorizontalOptions="Start" />
      <Label Text="{Binding SubTitle}" FontAttributes="Bold" TextColor="{StaticResource CaptainXamtasticBrandRedColor}" FontSize="Micro" VerticalOptions="Center" HorizontalOptions="EndAndExpand" />
      <BoxView WidthRequest="5" />
    </StackLayout>
  </Grid>
</ViewCell>